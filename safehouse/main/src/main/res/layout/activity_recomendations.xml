<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trillian"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/title"
        />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"
        android:background="@null"
        android:src="@drawable/icon_back"

        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="32dp"
        android:layout_below="@+id/title"
        android:layout_above="@+id/r_thrid"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In December 2015, the instant messaging application Trillian suffered a data breach. The breach became known in July 2016 and exposed various personal data attributes including names, email addresses and passwords stored as salted MD5 hashes."
            android:textColor="#D8D8D8D9"
            android:lineSpacingExtra="8dp"
            android:textSize="12sp"
            android:id="@+id/description"
            />
    </ScrollView>


    <RelativeLayout
        android:id="@+id/r_thrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="32dp"
        android:layout_above="@+id/r_second"
        android:background="@drawable/hint_bg">
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hint_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change your password"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/iv3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/changePaswdDesc"
            android:layout_below="@+id/tv3"
            android:layout_toRightOf="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It is important to update your password regularly"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="32dp"
        android:layout_above="@+id/r_first"
        android:background="@drawable/hint_bg">
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hint_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a complex password"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/iv2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/complexPaswdDescr"
            android:layout_below="@+id/tv2"
            android:layout_toRightOf="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The complexity of your passwords impacts your online security"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:layout_above="@+id/back_btn"
        android:background="@drawable/hint_bg">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hint_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use unique passwords"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/iv1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/uniquePaswdDesc"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create different passwords for your accounts and keep them safe"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:background="@drawable/background_button_login"
        android:text="Got It!"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18dp" />
</RelativeLayout>